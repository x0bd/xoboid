---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
	label: string;
	isUnderline?: boolean;
	isSpecial?: boolean;
};

const { label, isUnderline, isSpecial, ...props } = Astro.props;
---

<a
	href={props.href}
	class:list={{
		["hover:text-yellow cursor-pointer"]: true,
		["underline decoration-dashed underline-offset-8"]: isUnderline,
		["text-red"]: isSpecial
	}}
	{...props}
	rel="noreferrer"
	target="_blank"
>
	{label}
	<span class="sr-only">{label} link</span>
</a>
