---
import type { CollectionEntry } from "astro:content";

type Props = {
	entry: CollectionEntry<"experiments">;
};

const { entry } = Astro.props;
---

<img
	src={`/src/content/${entry.collection}/${entry.slug}/${entry.data.link}`}
	alt=""
	class="rounded-xl object-cover md:w-[300px] md:h-[300px] sm:w-full sm:h-full"
/>
