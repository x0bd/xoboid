---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { ABOUT } from "@consts";
---

<PageLayout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
	<Container
		><div class="flex justify-start items-center gap-5">
			<img
				src="/xoboid.jpg"
				alt="thermodynamic monk"
				class="h-20 w-20 rounded-full animate"
			/>
			<div class="flex flex-col">
				<h2 class="animate font-semibold text-black dark:text-white">
					Tinodaishe Tembo
				</h2>
				<h4 class="animate">
					<Link
						href="https://twitter.com/xoboid"
						aria-label="xoboid"
						external
					>
						@xoboid</Link
					>
				</h4>
			</div>
		</div></Container
	>
</PageLayout>
