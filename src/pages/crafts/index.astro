---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import HomeButton from "@components/HomeButton.astro";
import { experiments } from "@data/crafts";

import { HomeDirectories } from "@data/directories";

const craftsData = HomeDirectories[2];
---

<PageLayout title={craftsData.title} description={craftsData.description}>
	<Container>
		<div class="space-y-10">
			<HomeButton />
			<h1
				class="animate font-semibold text-xl text-black dark:text-white"
			>
				Crafts
			</h1>
			<section class="animate space-y-20 mt-10 mb-20">
				{
					experiments.map((experiment) => (
						<article>
							<a
								href={experiment.link}
								class="flex flex-col animate no-underline hover:brightness-90"
							>
								<div class="flex items-center justify-between">
									<h5 class="font-bold text-xs text-black dark:text-white">
										{experiment.date}
									</h5>
									<span class="border border-zinc-800 dark:border-white rounded-xl uppercase text-xs px-2 py-1 font-bold">
										{experiment.tech}
									</span>
								</div>

								<img
									src={experiment.banner}
									class="w-full h-full mt-2 mb-3 rounded-lg object-cover"
									alt={experiment.title}
								/>

								<h5 class="font-semibold text-xl text-black dark:text-white">
									{experiment.title}
								</h5>
							</a>
						</article>
					))
				}
			</section>
		</div>
	</Container>
</PageLayout>
