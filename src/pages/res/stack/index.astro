---
import PageLayout from "@layouts/PageLayout.astro";
import { StashDirectories } from "@data/directories";
import Container from "@components/Container.astro";
import HomeButton from "@components/HomeButton.astro";
import Link from "@components/Link.astro";

const websiteData = StashDirectories[3];
import { Languages, Frameworks, Tools } from "@data/stack";
---

<!-- ADD POPUP ON ICON HOVER, ONCE ASTRO ICONS IMPLEMENTED -->
<PageLayout title={websiteData.title} description={websiteData.description}>
	<Container>
		<div class="space-y-10 animate">
			<HomeButton />
			<Link href="/res">Resources</Link>
			<div class="grid grid-cols-1 lg:md:grid-cols-2">
				<article class="animate">
					<h1
						class="animate font-semibold text-base text-black dark:text-white"
					>
						Programming Languages
					</h1>
					<ul>
						{Languages.map((language) => <li>{language}</li>)}
					</ul>
				</article>
				<article class="animate">
					<h1
						class="animate font-semibold text-base text-black dark:text-white"
					>
						Tools & Platforms
					</h1>
					<ul>
						{Tools.map((tool) => <li>{tool}</li>)}
					</ul>
				</article>
				<article class="animate">
					<h1
						class="animate font-semibold text-base text-black dark:text-white"
					>
						Libraries & Frameworks
					</h1>
					<ul>
						{Frameworks.map((framework) => <li>{framework}</li>)}
					</ul>
				</article>
			</div>
		</div>
	</Container>
</PageLayout>
