---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { EXPERIMENTS } from "@data/consts";
import ExperimentCard from "@components/ExperimentCard.astro";

const experiments = await getCollection("experiments");
---

<PageLayout title={EXPERIMENTS.TITLE} description={EXPERIMENTS.DESCRIPTION}>
	<Container>
		<div class="space-y-10">
			<div class="font-semibold text-black dark:text-white">
				Experiments
			</div>
			<div class="space-y-4"></div>
			<ul class="grid md:grid-cols-2 sm:grid-cols-1 gap-5">
				{
					experiments.map((experiment) => (
						<li>
							<ExperimentCard entry={experiment} />
						</li>
					))
				}
			</ul>
		</div>
	</Container>
</PageLayout>
